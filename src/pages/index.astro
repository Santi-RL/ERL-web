---
import Base from '../layouts/Base.astro';
---

<Base>
  <!-- Header -->
  <header id="header" class="fixed top-0 left-0 right-0 z-50 transition-all duration-300 bg-white/95 backdrop-blur-md shadow-sm">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <!-- Logo -->
        <a href="#inicio" class="text-2xl font-bold font-display text-primary flex items-center">
          <!-- Imagen -->
          <img src="https://images.unsplash.com/photo-1635070041078-e363dbe005cb?&auto=format&fit=crop&w=200&q=80" alt="Logo Rojas Lem" class="h-8 w-8 mr-2 rounded-full">
          Rojas Lem
        </a>

        <!-- Navegación desktop -->
        <nav class="hidden md:flex space-x-6 items-center">
          <a href="#inicio"    class="text-gray-dark hover:text-primary transition">Inicio</a>
          <a href="#nosotros"  class="text-gray-dark hover:text-primary transition">Nosotros</a>
          <a href="#servicios" class="text-gray-dark hover:text-primary transition">Servicios</a>
          <a href="#recursos"  class="text-gray-dark hover:text-primary transition">Recursos</a>
          <a href="#clientes"  class="text-gray-dark hover:text-primary transition">Clientes</a>
          <a href="#contacto"  class="text-gray-dark hover:text-primary transition">Contacto</a>
          <a href="#contacto"  class="btn btn-outline-primary px-4 py-2">Consultar</a>
        </nav>

        <!-- Botón menú mobile -->
        <button id="mobile-menu-button" class="md:hidden text-dark focus:outline-none">
          <i data-lucide="menu" class="w-6 h-6"></i>
        </button>
      </div>
    </div>

    <!-- Menú mobile -->
    <div id="mobile-menu" class="hidden md:hidden absolute top-16 left-0 right-0 bg-white shadow-lg py-4 z-40">
      <nav class="flex flex-col space-y-4 px-6">
        <a href="#inicio"    class="block text-gray-dark hover:text-primary transition">Inicio</a>
        <a href="#nosotros"  class="block text-gray-dark hover:text-primary transition">Nosotros</a>
        <a href="#servicios" class="block text-gray-dark hover:text-primary transition">Servicios</a>
        <a href="#recursos"  class="block text-gray-dark hover:text-primary transition">Recursos</a>
        <a href="#clientes"  class="block text-gray-dark hover:text-primary transition">Clientes</a>
        <a href="#contacto"  class="block text-gray-dark hover:text-primary transition">Contacto</a>
        <a href="#contacto"  class="btn btn-outline-primary w-full mt-2">Consultar</a>
      </nav>
    </div>
  </header>

  <main>
    <!-- Inicio -->
    <section id="inicio" class="pt-24 md:pt-32 pb-16 md:pb-24 bg-gradient-to-b from-white to-primary/5">
      <div class="container mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <!-- Contenido -->
          <div class="text-center md:text-left reveal">
            <h1 class="text-4xl md:text-5xl lg:text-6xl font-display mb-6 text-dark leading-tight">
              Contabilidad <span class="text-primary">Modernizada</span> para tu Negocio
            </h1>
            <p class="text-lg md:text-xl text-gray-dark mb-8">
              Transformamos la gestión contable con tecnología de punta y asesoramiento personalizado para Pymes y emprendedores.
            </p>
            <div class="flex flex-col sm:flex-row justify-center md:justify-start items-center gap-4 mb-10">
              <a href="#contacto" class="btn btn-primary w-full sm:w-auto">
                <i data-lucide="calendar-plus" class="inline-block w-5 h-5 mr-2"></i> Consulta Gratuita
              </a>
              <a href="#servicios" class="btn btn-outline-primary w-full sm:w-auto">
                Nuestros Servicios <i data-lucide="arrow-right" class="inline-block w-5 h-5 ml-1"></i>
              </a>
            </div>
            <div class="flex flex-wrap justify-center md:justify-start items-center gap-6 text-gray-dark">
              <div class="flex items-center">
                <i data-lucide="users" class="w-6 h-6 text-secondary mr-2"></i>
                <span class="font-semibold">50+ Pymes</span>
              </div>
              <div class="flex items-center">
                <i data-lucide="check-circle" class="w-6 h-6 text-success mr-2"></i>
                <span class="font-semibold">Asesoramiento 360°</span>
              </div>
            </div>
          </div>

          <!-- Imagen -->
          <div class="reveal">
            <img src="https://images.unsplash.com/photo-1554224155-6726b3ff858f?&auto=format&fit=crop&w=1000&q=80" alt="Equipo contable trabajando" class="rounded-xl shadow-lg w-full h-auto object-cover" loading="lazy">
          </div>
        </div>
      </div>
    </section>

    <!-- Nosotros -->
    <!-- [...]  (pegué aquí TODAS las secciones tal cual están en tu borrador: Nosotros, Servicios, Recursos, Clientes, Contacto) -->

    <!-- Recordá que por límite de espacio el bloque completo de secciones está en tu archivo original; copiá/pegá todo lo que sigue desde <section id="nosotros"> hasta antes de </main> -->
  </main>

  <!-- Footer -->
  <!-- Copiá el bloque <footer> completo igual que en tu HTML, va aquí -->
  
  <!-- Botón Whatsapp -->
  <a href="https://wa.me/5491112345678" target="_blank" rel="noopener noreferrer"
     class="fixed bottom-5 right-5 z-40 p-4 bg-whatsapp rounded-full shadow-lg hover:bg-whatsapp-dark transition duration-300 group animate-bounce">
    <i data-lucide="message-circle" class="w-8 h-8 text-white group-hover:scale-110 transition-transform"></i>
    <span class="sr-only">Contactar por WhatsApp</span>
  </a>

  <!-- Scripts -->
  <script>
    /* Lucide Icons */
    document.addEventListener('DOMContentLoaded',()=>{ lucide.createIcons(); });

    /* Mobile menu toggle + icon swap */
    const menuBtn=document.getElementById('mobile-menu-button');
    const mobileMenu=document.getElementById('mobile-menu');
    const menuIcon=menuBtn.querySelector('i');
    menuBtn.addEventListener('click',()=>{
      mobileMenu.classList.toggle('hidden');
      menuIcon.setAttribute('data-lucide', mobileMenu.classList.contains('hidden') ? 'menu' : 'x');
      lucide.createIcons({nodes:[menuIcon]});
    });
    mobileMenu.querySelectorAll('a').forEach(l=>l.addEventListener('click',()=>{
      mobileMenu.classList.add('hidden');
      menuIcon.setAttribute('data-lucide','menu');
      lucide.createIcons({nodes:[menuIcon]});
    }));

    /* Header shadow on scroll */
    const header=document.getElementById('header');
    window.addEventListener('scroll',()=>{
      if(window.scrollY>50){ header.classList.add('shadow-md'); }
      else{ header.classList.remove('shadow-md'); }
    });

    /* Scroll reveal */
    const revealEls=document.querySelectorAll('.reveal');
    const o=new IntersectionObserver(e=>e.forEach(i=>{ if(i.isIntersecting){ i.target.classList.add('reveal-visible'); } }),{threshold:0.1});
    revealEls.forEach(el=>o.observe(el));

    /* Footer año actual */
    const year=document.getElementById('current-year');
    if(year) year.textContent = String(new Date().getFullYear());
  </script>
</Base>
